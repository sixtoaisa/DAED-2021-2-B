@model IEnumerable<Lab14.Models.Categories>

@{
    ViewBag.Title = "Index";
}


<h2>Index</h2>
<p>
    <!-- HIPERVINCULO (NOMBRE,METODO) -->
    @Html.ActionLink("Nueva Categoria", "Create")
</p>
<table class="table table-dark table-striped">
    <tr>
        <th>
            <!-- CABECERA DE LA LISTA -->
            @Html.DisplayNameFor(model => model.CategoryID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>

        </th>
    </tr>

    <!-- RECORRE CADA ENTIDAD DE LA COLECCION -->
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <!-- HIPERVINCULO (NOMBRE,METODO) -->
                @Html.ActionLink("Editar", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>



