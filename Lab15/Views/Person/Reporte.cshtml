
@using ReportViewerForMvc;

@{
    ViewBag.Title = "Reporte de Personas";
}

<h2>Reporte de Persona</h2>
@using (Html.BeginForm("Reporte", "Person", FormMethod.Post))
{
    <p>
        Nombre : @Html.TextBox("FirstName")
        <input type="submit" value="Buscar" class="btn btn-success" />
    </p>
}

@if (ViewBag.ReportViewer != null)
{
    @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer)
}

<style>
    iframe {
        border-width: 0;
        width: 900px;
        height: 700px;
    }
</style>

<div>
@Html.ActionLink("Retornar al Index", "Index")
</div>